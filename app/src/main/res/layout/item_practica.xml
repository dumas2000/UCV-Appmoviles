<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8EB2B4">

    <ImageView
        android:id="@+id/imgcurso"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/imgcurso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtcurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgcurso"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Matematica" />

    <TextView
        android:id="@+id/txttema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgcurso"
        app:layout_constraintTop_toBottomOf="@+id/txtcurso"
        tools:text="OperaciÃ³n con fracciones" />

</androidx.constraintlayout.widget.ConstraintLayout>