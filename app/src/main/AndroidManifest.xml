<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ucv.edu.pe.mindperformance" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_mindperformance"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_mindperformance_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MindPerformance"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".RegistrarUsuario"
            android:exported="false" />
        <activity
            android:name=".UserActivity"
            android:exported="false" />
        <activity
            android:name=".CursoMainActivity"
            android:exported="false" />
        <activity
            android:name=".DrawerMainActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>